		</if>
		<if test="lastModifyTime != null">
			AND LAST_MODIFY_TIME= #{lastModifyTime}
		</if>
		<if test="roleDesc != null">
			AND ROLE_DESC= #{roleDesc}
		</if>
		<if test="deleteFlag != null">
			AND DELETE_FLAG= #{deleteFlag}
		</if>
		<if test="memo != null">
			AND MEMO= #{memo}
		</if>
	</select>

	<!-- 新增角色 -->
	<insert id="addRole" parameterType="Role" useGeneratedKeys="true"
		keyProperty="roleId">
		insert into LEGOO_ROLE
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="roleName != null">
				ROLE_NAME,
			</if>
			<if test="roleNo != null">
				ROLE_NO,
			</if>
			<if test="roleDesc != null">
				ROLE_DESC,
			</if>
			<if test="roleType != null">
				ROLE_TYPE,
			</if>
			<if test="createTime != null">
				CREATE_TIME,
			</if>
			<if test="lastModifyTime != null">
				LAST_MODIFY_TIME,
			</if>
			<if test="deleteFlag != null">
				DELETE_FLAG,
			</if>
			<if test="memo != null">
				MEMO,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="roleName != null">
				#{roleName},
			</if>
			<if test="roleNo != null">
				#{roleNo},
			</if>
			<if test="roleDesc != null">
				#{roleDesc},
			</if>
			<if test="roleType != null">
				#{roleType},
			</if>
			<if test="createTime != null">
				#{createTime},
			</if>
			<if test="lastModifyTime != null">
				#{lastModifyTime},
			</if>
			<if test="deleteFlag != null">
				#{deleteFlag},
			</if>
			<if test="memo != null">
				#{memo},
			</if>
		</trim>
		<selectKey resultType="java.lang.Long" order="AFTER"
			keyProperty="roleId">
			SELECT LAST_INSERT_ID()
		</selectKey>
	</insert>
	<select id="findRoleByNo" resultType="Role" resultMap="resultRoleList">
		SELECT *
		FROM LEGOO_ROLE WHERE ROLE_NO = #{roleNo}
	</select>
</mapper>
