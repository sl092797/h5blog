<?xml version="1.0" encoding="UTF-8" ?>
    <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.victor.h5blog.dao.UserRoleDao">
	<resultMap id="resultUserRoleList" type="UserRole">
		<id column="USER_ROLE_ID" property="userRoleId" />
		<result column="USER_ID" property="userId" />
		<result column="ROLE_ID" property="roleId" />
	</resultMap>
	<sql id="UserRole_Column_List">
		USER_ROLE_ID, USER_ID, ROLE_ID
	</sql>
	<select id="count" parameterType="UserRole" resultType="int">
		select count(1) from LEGOO_USER_ROLE where 1=1
		<if test="userRoleId != null">
			AND USER_ROLE_ID= #{userRoleId}
		</if>
		<if test="userId != null">
			AND USER_ID= #{userId}
		</if>
		<if test="roleId != null">
			AND ROLE_ID= #{roleId}
		</if>
	</select>
	<insert id="insert" parameterType="UserRole" useGeneratedKeys="true"
		keyProperty="userRoleId">
		insert into LEGOO_USER_ROLE
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<!-- USER_ROLE_ID, -->
			<if test="userId != null">
				USER_ID,
			</if>
			<if test="roleId != null">
				ROLE_ID,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<!-- UUID_SHORT(), -->
			<if test="userId != null">
				#{userId},
			</if>
			<if test="roleId != null">
				#{roleId},
			</if>
		</trim>
	</insert>
	<delete id="deleteById" parameterType="UserRole">
		delete from
		LEGOO_USER_ROLE where USER_ROLE_ID = #{userRoleId}
	</delete>
	<delete id="deleteByRoleId">
		DELETE FROM LEGOO_USER_ROLE WHERE ROLE_ID = #{roleId}
	</delete>
	<delete id="deleteByMap" parameterType="UserRole">
		delete from LEGOO_USER_ROLE
		<where>
			<if test="userRoleId != null">
				AND USER_ROLE_ID= #{userRoleId}
			</if>
			<if test="userId != null">
				AND USER_ID= #{userId}
			</if>
			<if test="roleId != null">
				AND ROLE_ID= #{roleId}
			</if>
		</where>
	</delete>
	<update id="update" parameterType="UserRole">
		update LEGOO_USER_ROLE
		<set>
			<if test="userId != null">
				USER_ID=#{userId},
			</if>
			<if test="roleId != null">
				ROLE_ID=#{roleId},
			</if>
		</set>
		where USER_ID = #{userId}
	</update>
	<select id="getUserRoleByUser" resultMap="resultUserRoleList">
		select
		<include refid="UserRole_Column_List" />
		from LEGOO_USER_ROLE where USER_ID = #{userId}
	</select>
	<select id="selectByProperties" parameterType="UserRole"
		resultMap="resultUserRoleList">
		select
		<include refid="UserRole_Column_List" />
		from LEGOO_USER_ROLE where 1=1
		<if test="userRoleId != null">
			AND USER_ROLE_ID= #{userRoleId}
		</if>
		<if test="userId != null">
			AND USER_ID= #{userId}
		</if>
		<if test="roleId != null">
			AND ROLE_ID= #{roleId}
		</if>
	</select>

</mapper>
